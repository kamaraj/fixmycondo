# FixMyCondo Backend Environment Variables
# Copy this file to .env and update values

# Application
APP_NAME=FixMyCondo
APP_VERSION=1.0.0
DEBUG=True

# Security (CHANGE IN PRODUCTION!)
SECRET_KEY=your-super-secret-key-change-in-production-min-32-chars
JWT_SECRET_KEY=jwt-secret-key-change-in-production-min-32-chars
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# Database
# SQLite for development
DATABASE_URL=sqlite+aiosqlite:///./fixmycondo.db
# PostgreSQL for production
# DATABASE_URL=postgresql+asyncpg://user:password@localhost:5432/fixmycondo

# Redis
REDIS_URL=redis://localhost:6379/0

# File Upload
UPLOAD_DIR=uploads
MAX_UPLOAD_SIZE=10485760

# SLA Configuration (hours)
SLA_LOW_PRIORITY=72
SLA_MEDIUM_PRIORITY=48
SLA_HIGH_PRIORITY=24
SLA_CRITICAL_PRIORITY=4

# CORS Origins (comma-separated)
CORS_ORIGINS=http://localhost:3000,http://localhost:8081,http://localhost:19006
